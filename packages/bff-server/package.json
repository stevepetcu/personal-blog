{
  "name": "bff-server",
  "version": "0.1.0",
  "packageManager": "yarn@3.5.0",
  "scripts": {
    "build": "yarn tsc -b -v",
    "start": "nodemon -e ts --exec \"yarn build && node ./build/server.js\"",
    "test": "yarn tsc --noEmit && jest",
    "lint": "eslint 'src/**/*.{js,ts}' && prettier --check 'src/**/*.{js,ts,css,md,json}'",
    "lint:fix": "eslint --fix 'src/**/*.{js,ts}' && prettier --write 'src/**/*.{js,ts,css,md,json}'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
